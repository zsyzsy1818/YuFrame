<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <Button
        android:id="@+id/test_camera_systemtestactivity_btn_StartCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Camera_SD" />
    <Button
        android:id="@+id/test_camera_systemtestactivity_btn_StartCameraInGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Camera_Publish" />
    <ImageView
        android:id="@+id/test_camera_systemtestactivity_iv_CameraImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>